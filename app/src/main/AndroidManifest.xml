<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dirtydish.app.dirtydish">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenuDrawer"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="dirty-dish"
                    android:scheme="dirty-dish" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AuthActivity"
            android:parentActivityName=".MainMenuDrawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SetupHouse"
            android:label="@string/title_activity_setup_house"
            android:parentActivityName=".MainMenuDrawer">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dirtydish.app.dirtydish.MainMenuDrawer" />
        </activity>
        <activity
            android:name=".SelectHouse"
            android:label="@string/title_activity_select_house"
            android:parentActivityName=".AuthActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dirtydish.app.dirtydish.AuthActivity" />
        </activity>
        <activity
            android:name=".JoinHouse"
            android:label="@string/title_activity_join_house"
            android:parentActivityName=".SelectHouse"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dirtydish.app.dirtydish.SelectHouse" />
        </activity>
        <activity
            android:name=".AddChoreActivity"
            android:parentActivityName=".ChoreMenuDrawer" />
        <activity
            android:name=".ViewChoresActivity"
            android:parentActivityName=".ChoreMenuDrawer" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.dirtydish.app.dirtydish.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".ChoreMenuDrawer"
            android:label="@string/title_activity_chore_menu_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewHouse"
            android:label="@string/title_activity_view_house" />
        <activity
            android:name=".InviteHouseMates"
            android:label="@string/title_activity_invite_house_mates"
            android:parentActivityName=".SetupHouse"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dirtydish.app.dirtydish.SetupHouse" />
        </activity>
    </application>

</manifest>